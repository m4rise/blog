{% extends 'base.html.twig' %}

{% block title %}Administrer les articles{% endblock %}

{% block body %}
    <h1>Commentaires en attente de validation</h1>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Créé le</th>
            <th>Titre</th>
            <th>Contenu</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>

        {% for comment in pendingComments %}
            <tr>
                <td>{{ comment.createdAt | date('d/m/Y H:i') }}</td>
                <td>{{ comment.title }}</td>
                <td>{{ comment.content | nl2br }}</td>
                <td>
                    <form method="post" action="{{ path('admin.comment.validate', {'id': comment.id}) }}" class="mb-3" >
                        <input type="hidden" name="_token" value="{{ csrf_token('validate' ~ comment.id) }}">
                        <button class="btn btn-success w-100">Valider</button>
                    </form>
                    <form method="post" action="{{ path('admin.comment.delete', {'id': comment.id}) }}" class="mb-3">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
                        <button class="btn btn-danger w-100">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas de résultats</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block footer %}
{% endblock %}

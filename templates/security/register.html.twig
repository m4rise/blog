{% extends 'base.html.twig' %}

{% block title %}Inscription au blog{% endblock %}

{% block body %}
    <div class="w-50 mx-auto">
        <h1 class="h3 mb-3 font-weight-normal text-center">Créer un compte</h1>
        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.nickname) }}
        {{ form_row(registrationForm.plainPassword.first) }}
        {{ form_row(registrationForm.plainPassword.second) }}

        <button class="btn btn-lg btn-primary w-100">Créer mon compte</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
